<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalogsearch.leftnav">
            <action method="setTemplate" ifconfig="catalog/layered_navigation/enable_multiselect_layer">
                <argument name="template" xsi:type="string">SomethingDigital_AjaxLayeredNav::layer/view.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="catalogsearch.navigation.renderer">
            <action method="setTemplate" ifconfig="catalog/layered_navigation/enable_multiselect_layer">
                <argument name="template" xsi:type="string">SomethingDigital_AjaxLayeredNav::layer/filter.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
